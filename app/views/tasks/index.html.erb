<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class = "table table-striped table-condensed">
  <thead>
    <th></th>
    <th>id</th>
    <th>内容</th>
    <th>状態</th>
  </thead>
  <tbody>
  <% @tasks.each do |task| %>
  <tr>
    <td class = "text-center"><%= link_to '消去', task, method: :delete, data: {confirm: 'タスクを削除してもよろしいですか？'}, class: "btn btn-danger" %></td>
    <td><%= link_to task.id, task %></td>
    <td><%= task.content %></td>
    <td><%= task.status %></td>
  </tr>
  <% end %>
  </tbody>
  </table>

<div>
  <%= paginate @tasks %>
</div>

<% end %>