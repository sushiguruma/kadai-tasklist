<%= form_for(tasks) do |f| %>
  <% if tasks.errors.any? %>
    <div id = 'error_explanation'>
      <ul>
        <% tasks.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, '状態' %>
  <%= f.select :status, ['未実行', '完了済'] %>
  
  <%= f.submit '投稿' %>
<% end %>